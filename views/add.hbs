<h1>Add a new course</h1>
{{#if error}}
<p class="alert">{{error}}</p>
{{/if}}
<form action="/add" method="POST">
    <div class="input-field">
        <input id="title" name="title" type="text" value="{{data.title}}" class="validate" required>
        <label for="title">Name of course</label>
        <span class="helper-text" data-error="Input a title"></span>
    </div>
    <div class="input-field">
        <input id="price" name="price" type="number" value="{{data.price}}" class="validate" required min="1">
        <label for="price">Price of course</label>
        <span class="helper-text" data-error="Input a price"></span>
    </div>
    <div class="input-field">
        <input id="img" name="img" type="text" value="{{data.img}}" class="validate" required>
        <label for="img">URL of image</label>
        <span class="helper-text" data-error="Input url of image"></span>
    </div>
    <input type="hidden" name="_csrf" value="{{csrf}}">
    <button class="btn btn-primary">Add</button>
</form>