<h1>Edit {{course.title}}</h1>
<form action="/courses/edit" method="POST">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" required value="{{course.title}}">
        <label for="title">Name of course</label>
        <span class="helper-text" data-error="Input a title"></span>
    </div>
    <div class="input-field">
        <input id="price" name="price" type="number" class="validate" required min="1" value="{{course.price}}">
        <label for="price">Price of course</label>
        <span class="helper-text" data-error="Input a price"></span>
    </div>
    <div class="input-field">
        <input id="img" name="img" type="text" class="validate" required value="{{course.img}}">
        <label for="img">URL of image</label>
        <span class="helper-text" data-error="Input url of image"></span>
    </div>
    <input type="hidden" name="id" value="{{course.id}}"">
    <button class=" btn btn-primary">Edit</button>
</form>